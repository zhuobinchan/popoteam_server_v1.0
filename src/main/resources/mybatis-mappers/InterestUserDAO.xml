            </if>
            <if test="interestId != null">
                and pu_interest_user.interest_id = #{interestId,jdbcType=BIGINT}
            </if>
            <if test="createTime != null">
                and pu_interest_user.create_time = #{createTime,jdbcType=TIMESTAMP}
            </if>
        </trim>
